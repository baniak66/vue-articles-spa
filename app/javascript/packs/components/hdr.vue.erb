<% helpers = ActionController::Base.helpers %>
<template>
  <div class="hdr">
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#"><%= helpers.link_to "Articles", "#" %></a>
        </div>
        <div>
          <ul class="nav navbar-nav navbar-right" v-if="name != ''" >
            <li><a href="#">{{name}}</a></li>
            <li>
              <a href="" v-on:click="logout">
                <%= helpers.link_to 'Logout', '/logout', method: :delete %>
              </a>
            </li>
          </ul>
        </div>
        <form class="navbar-form navbar-right" v-if="name == ''">
          <button class="btn btn-default"><%= helpers.link_to 'Facebook', '/auth/facebook' %></button>
        </form>
      </div>
    </nav>
  </div>
</template>

<script>
  var user = document.getElementById("user-status")
  if (user != null) {
    var user_name = JSON.parse(user.dataset.userName)
  } else {
    var user_name = ""
  }

  export default {
    name: 'hdr',
    data () {
      return {
        name: user_name
      }
    },
    methods: {
      logout: function() {
        console.log("zaczynam logout")
        this.name = ""
        console.log("koncze logout")
      }
    }
  }
</script>
